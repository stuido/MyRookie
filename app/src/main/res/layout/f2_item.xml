<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:padding="15dp"
    xmlns:fresco="http://schemas.android.com/apk/res-auto">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/f2_item_img"
        android:layout_width="@dimen/x200"
        android:layout_height="@dimen/y200"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        fresco:placeholderImage="@mipmap/ic_launcher"
        fresco:roundedCornerRadius="15dp" />

    <TextView
        android:id="@+id/tv_describe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/f2_item_img"
        android:maxLines="3"
        android:text="电脑的各种介绍你要不信你就试试现在信了吧"
        android:textSize="20sp" />

    <TextView
        android:layout_width="@dimen/x500"
        android:layout_height="@dimen/y1"
        android:background="#999999"
        android:padding="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/tv_describe"
        android:layout_toEndOf="@+id/f2_item_img"
        android:id="@+id/textView">
    </TextView>

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/f2_item_img"
        android:layout_toEndOf="@+id/f2_item_img"
        android:text="￥价钱"
        android:textColor="#f00"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/buy_now"
        android:layout_width="@dimen/x200"
        android:layout_height="@dimen/y60"
        android:layout_alignBottom="@+id/tv_price"
        android:layout_alignParentEnd="true"
        android:background="#f00"
        android:gravity="center"
        android:text="立即购买"
        android:layout_alignParentRight="true"
        android:textColor="#fff"
        android:textSize="18sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/y2"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_price"
        android:layout_marginTop="20dp"
        android:background="#999999" />

</RelativeLayout>