<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#f00"
        android:gravity="center"
        android:id="@+id/searchedit_header">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:focusable="true"
            android:clickable="true"
            android:id="@+id/fouth_head_fh"
            android:background="@mipmap/ic_action_back"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:backgroundTint="#eee"
            android:textColorHint="#eee"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="购物车"
            android:textSize="25sp"
            android:textColor="#fff"
            android:id="@+id/fouth_head_gw"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="编辑"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="#fff"
            android:id="@+id/fouth_head_bj"
            android:layout_marginRight="15dp"/>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/fouth_recy"
        android:layout_below="@+id/searchedit_header"
        android:layout_above="@+id/searchedit_foot"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v7.widget.RecyclerView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#fff"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:id="@+id/searchedit_foot">
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全选"
            android:textSize="20sp"
            android:id="@+id/fouth_foot_ck"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:backgroundTint="#eee"
            android:textColorHint="#eee"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="合计:￥0"
            android:textSize="20sp"
            android:id="@+id/fouth_foot_hj"
            />
        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="#f00"
            android:text="去结算"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="#fff"
            android:id="@+id/fouth_foot_js"
            />
    </LinearLayout>
</RelativeLayout>